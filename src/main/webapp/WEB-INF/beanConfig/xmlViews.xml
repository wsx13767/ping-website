<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="logout" class="org.springframework.web.servlet.view.RedirectView">
		<property name="contextRelative" value="true"/>
		<property name="url" value="/views/registerLogin"/>
	</bean>
	
	<bean id="loginSuccess" class="org.springframework.web.servlet.view.RedirectView">
		<property name="contextRelative" value="true"/>
		<property name="url" value="/"/>
	</bean>
	
	<bean id="loginFail" class="org.springframework.web.servlet.view.InternalResourceView">
		<property name="url" value="/WEB-INF/views/jsp/registerLogin.jsp"/>
	</bean>
	
	<bean id="registerSuccess" class="org.springframework.web.servlet.view.InternalResourceView">
		<property name="url" value="/WEB-INF/views/jsp/registerLogin,jsp"/>
	</bean>
	
	<bean id="registerFail" class="org.springframework.web.servlet.view.InternalResourceView">
		<property name="url" value="/WEB-INF/views/jsp/registerLogin.jsp"/>
	</bean>
</beans>
